<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <com.ali77gh.pash.ui.view.FuckingCoolProgressbar
        android:id="@+id/progressbar_login"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_edit_text">
        <EditText
            android:id="@+id/text_login_password"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="master password"
            android:inputType="textPassword"
            android:lines="1"
            android:singleLine="true"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

        <ImageView
            android:id="@+id/img_login_password_visible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/login_show_password"
            android:tint="@color/colorPrimary"
            android:padding="6dp"
            android:layout_marginRight="4dp"/>
    </LinearLayout>


    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/check_remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:buttonTint="@color/colorPrimary"
        android:color="@color/colorPrimary"
        android:paddingRight="90dp"
        android:text="remember me"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_button"
        android:text="enter" />
</LinearLayout>